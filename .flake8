[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    */migrations/*,
    venv,
    .venv,
    */static/*,
    */media/*,
    node_modules
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file
per-file-ignores =
    __init__.py:F401
max-complexity = 25

